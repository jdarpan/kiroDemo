# Backend Environment Variables
# Copy this file to .env and update with your production values

# Server Configuration
SERVER_PORT=8080

# Database Configuration (H2 File-based)
DATABASE_URL=jdbc:h2:file:./data/dormant_accounts;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
DATABASE_USERNAME=sa
DATABASE_PASSWORD=

# JWT Configuration
# IMPORTANT: Generate a new secret for production!
# You can generate one using: openssl rand -base64 32
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET_HERE_CHANGE_THIS
JWT_EXPIRATION=3600000

# CORS Configuration
# Update with your frontend URL
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# Logging
LOGGING_LEVEL=INFO
